<h1>Create an article</h1>

<% if @article.errors.any? %>
<ul>
    <% @article.errors.full_messages.each do |err| %>
    <li><%= err %></li>
    <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
<p>
    <%= f.label :title %>
    <%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>