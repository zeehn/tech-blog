<h2 align="center"> <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
    <% if @article.user %>
    <ul class="listing center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <li>
                    <h4>Created by:</h4>
                </li>
                <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                <li class="article-title">
                    <%= link_to @article.user.username, user_path(@article.user) %>
                </li>
                <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small>
                </li>
            </div>
        </div>
    </ul>
    <% end %>

    <hr>
    <%= simple_format(@article.description) %>

    <div class="article-actions">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this article", article_path(@article.id), method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-xs btn-danger" %>
        <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
    </div>
</div>