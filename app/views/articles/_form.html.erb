<%= render 'shared/errors', obj: @article %>

<div class="row">
    <div class="col-xs-12">
        <%= form_for(@article, :html => {class: 'form-horizontal', role: "form"}) do |f| %>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
                <%= f.label :title %>
            </label>
            <div class="col-sm-8 col-form-label">
                <%= f.text_field :title, class:"form-control", placeholder: "Title of the article", autofocus: true%>
            </div>
        </div>

        <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
                <%= f.label :description %>
            </label>
            <div class="col-sm-8 col-form-label">
                <%= f.text_area :description, class:"form-control", rows: 10, placeholder: "Description for the article", autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit class: "btn btn-primary btn-lg" %>
            </div>
        </div>

        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to "Cancel request and return to articles", articles_path %> ]
        </div>
    </div>
</div>